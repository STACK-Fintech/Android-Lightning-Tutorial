<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="true"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/textColor"
            android:textSize="18dp"
            android:text="Wallet Balance:  "/>

        <TextView
            android:id="@+id/balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="18dp"
            android:textColor="@color/textColor"
            tools:text="0"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="14dp"
                android:textColor="@color/textColor"
                android:text="Node URI:"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/connected_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginRight="60dp"
                android:textSize="14dp"
                android:textColor="@color/red"
                android:text="CONNECTED"/>

        </LinearLayout>

        <EditText
        android:id="@+id/uri_et"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="text"
        android:background="@color/textColor"
        android:hint="enter node uri..."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="14dp"
            android:textColor="@color/textColor"
            android:text="Deposit"/>

        <EditText
            android:id="@+id/deposit_et"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="text"
            android:background="@color/textColor"
            android:hint="enter node uri..."/>

        <Button
            android:id="@+id/connect_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="14dp"
            android:textColor="@color/textColor"
            android:text="Connect"
            />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="14dp"
        android:textColor="@color/textColor"
        android:text="Amount"
        android:layout_marginTop="32dp"/>

        <EditText
            android:id="@+id/amount_et"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/textColor"
            android:hint="enter satoshis..."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="14dp"
            android:textColor="@color/textColor"
            android:text="Payment Request"/>

        <EditText
            android:id="@+id/payment_et"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/textColor"
            android:hint="enter payment request..."/>

        <Button
            android:id="@+id/payment_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="14dp"
            android:textColor="@color/textColor"
            android:text="Send Payment"/>

        <Button
            android:id="@+id/close_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="14dp"
            android:textColor="@color/textColor"
            android:text="Close Channel"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>